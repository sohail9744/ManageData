<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:forms="sap.ui.layout.form" xmlns="sap.m" >
	<forms:SimpleForm editable="false" layout="ColumnLayout">
		<Label text="{i18n>ActualWork}" visible="{=${fieldMappingModel>/121/visibility} === 'Y' ? true : false}"
 required="{=${fieldMappingModel>/121/mandatory} === 'Y' ? true : false}"/>
		<Input  value="{Customers>/ActualWork}" editable="true"/>
		<Label text="{i18n>Reason}" />
			<Input editable="true" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="onValueHelpRequested" value="{detailView>/Reason}"/>
		<!--<Input id="input" showValueHelp="true" valueHelpOnly="true" valueHelpRequest=".onValueHelpRequested"-->
		<!--	suggestionItems="{ path: '/ProductCollection', sorter: { path: 'Name' } }"></Input>-->
		<Label text="{i18n>ConfText}" />
		<Input  editable="true" value="{Customers>/ConfirmationText}"/>
		
	</forms:SimpleForm>
</mvc:View>
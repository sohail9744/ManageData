<mvc:View
    controllerName="Iffco.clap.sections.SalesArea.AccountingController"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:forms="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    height="100%"
>
    <l:VerticalLayout
        class="sapUiContentPadding"
        width="100%"
    >
        <l:content>
            <!-- <Button
                text="Add Sales Area"
                enabled="{=${appView>/addSales} === true ? true : false}"
                visible="{=${appView>/vertical} == 'Cash' ? true : false}"
                icon="sap-icon://add"
                type="Transparent"
                press="handleCreate"
            /> -->
            <Button
                text="Add Sales Area"
                icon="sap-icon://add"
                type="Transparent"
                press="handleCreate"
                visible="{appView>/clapFields}"
            />
            <Button
                text="Display Sales Area"
                tooltip="click here"
                visible="true"
                enabled="{=${appView>/process} === 'CHANGE' ? false : true}"
                id="generateSales"
                press="handleGenerateSales"
            />
            <VBox id="container" />
        </l:content>
    </l:VerticalLayout>
</mvc:View>

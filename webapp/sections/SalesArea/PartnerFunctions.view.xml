	<forms:SimpleForm editable="false" layout="ColumnLayout">
		<Label text="Bill to, Ship to, Payer, Buyer" visible="{=${fieldMappingModel>/62/visibility} === 'Y' ? true : false}"
 required="{=${fieldMappingModel>/62/mandatory} === 'Y' ? true : false}"/>
		<Input value="{Customers>/zbill_to_buyer}" visible="{=${fieldMappingModel>/62/visibility} === 'Y' ? true : false}"/>
		<Label text = "Only Ship To" visible="{=${fieldMappingModel>/301/visibility} === 'Y' ? true : false}"
 required="{=${fieldMappingModel>/301/mandatory} === 'Y' ? true : false}"/>
		<Input value="{Customers>/zonly_ship_to}" visible="{=${fieldMappingModel>/301/visibility} === 'Y' ? true : false}"/>
		
		<Label text="Sales Person" visible="{=${fieldMappingModel>/392/visibility} === 'Y' ? true : false}"
 required="{=${fieldMappingModel>/392/mandatory} === 'Y' ? true : false}"/>
		<Input value="{Customers>/zsales_person}" visible="{=${fieldMappingModel>/392/visibility} === 'Y' ? true : false}"/>
		<Label text="Agent" visible="{=${fieldMappingModel>/22/visibility} === 'Y' ? true : false}"
 required="{=${fieldMappingModel>/22/mandatory} === 'Y' ? true : false}"/>

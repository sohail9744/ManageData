<mvc:View controllerName="Iffco.clap.sections.SalesArea.TaxIndicatorController" xmlns:mvc="sap.ui.core.mvc" xmlns:forms="sap.ui.layout.form" xmlns="sap.m" >
	<forms:SimpleForm editable="false" layout="ColumnLayout">
		<Label text="Country" visible="{=${fieldMappingModels>/CountryVisible} === true ? true : false}"
 required="{=${fieldMappingModels>/CountryMandatory} === true ? true : false}"/>
		<Input enabled="{appView>/status}" value="{Customers>/zcountry}" maxLength="20" visible="{=${fieldMappingModels>/CountryVisible} === true ? true : false}"/>
		<Label text = "Tax category" visible="{=${fieldMappingModels>/TaxCategoryVisible} === true ? true : false}"
 required="{=${fieldMappingModels>/TaxCategoryMandatory} === true ? true : false}"/>
		<!-- <Input enabled="{appView>/status}" value="{Customers>/ztaxcategory}" visible="{=${fieldMappingModels>/TaxCategoryVisible} === true ? true : false}"/> -->
		<MultiInput showClearIcon="true" enabled="{appView>/status}" valueHelpRequest="handleValueHelpForTaxCat" value="{Customers>/ztaxcategory}"
		valueHelpOnly="true" visible="{=${fieldMappingModels>/TaxCategoryVisible} === true ? true : false}"/>
		<Label text="Tax Classification" visible="{=${fieldMappingModels>/TaxclassificationVisible} === true ? true : false}"
 required="{=${fieldMappingModels>/TaxclassificationMandatory} === true ? true : false}"/>
		<!-- <Input enabled="{appView>/status}" value="{Customers>/ztax_classification}" maxLength="1" visible="{=${fieldMappingModels>/TaxclassificationVisible} === true ? true : false}"/> -->
		<MultiInput showClearIcon="true" enabled="{appView>/status}" valueHelpRequest="handleValueHelpForTaxClssfn" value="{Customers>/ztax_classification}"
		valueHelpOnly="true" visible="{=${fieldMappingModels>/TaxclassificationVisible} === true ? true : false}"/>
		<Label text="Tax Category 2" visible="{=${fieldMappingModels>/TaxCategory2Visible} === true ? true : false}"
 required="{=${fieldMappingModels>/TaxCategory2Mandatory} === true ? true : false}"/>
		<Input enabled="{appView>/status}" value="{Customers>/ztax_category2}" visible="{=${fieldMappingModels>/TaxCategory2Visible} === true ? true : false}"/>
		<Label text="Tax Classification 2" visible="{=${fieldMappingModels>/Taxclassification2Visible} === true ? true : false}"
 required="{=${fieldMappingModels>/Taxclassification2Mandatory} === true ? true : false}"/>
		<Input enabled="{appView>/status}" value="{Customers>/ztax_classification2}" maxLength="1" visible="{=${fieldMappingModels>/Taxclassification2Visible} === true ? true : false}"/>
	</forms:SimpleForm>
</mvc:View>
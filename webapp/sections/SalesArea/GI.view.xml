<mvc:View controllerName="Iffco.createCustomer.controller.view2" xmlns:mvc="sap.ui.core.mvc" xmlns:forms="sap.ui.layout.form" xmlns="sap.m" >
	
	<Table id="salesOrg" items="{salesModel>/}">
												<headerToolbar>
													<Toolbar>
														<ToolbarSpacer/>
														<Button id="addSalesId" icon="sap-icon://add" type="Transparent" press="handleAddSales"/>
													</Toolbar>
												</headerToolbar>
												<columns>
													<Column>
														<Text text="Sales Organization" />
													</Column>
													<Column>
														<Text text="Distribution Channel" />
													</Column>
													<Column>
														<Text text="Division" />
													</Column>
													
													<Column>
														<Text text=""/>
													</Column>
												</columns>
												<items>
													<ColumnListItem type="Active"  press="onTaxItemPress">
														<cells>
															<Text id="taxLandId" text="{salesModel>zsales_orgnization}" visible="{=${fieldMappingModel>/391/visibility} === 'Y' ? true : false}"/>
															<Text id="taxNameId" text="{salesModel>zdistribution_channel}" visible="{=${fieldMappingModel>/167/visibility} === 'Y' ? true : false}"/>
															<Text id="TAXTYPE" text="{salesModel>zdivision}"  visible="{=${fieldMappingModel>/168/visibility} === 'Y' ? true : false}"/>
															
															<Button icon="sap-icon://delete" type="Transparent" press="handleDeleteSalesGrid"/>
														</cells>
													</ColumnListItem>
												</items>
											</Table>
</mvc:View>
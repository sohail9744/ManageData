<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:forms="sap.ui.layout.form" xmlns="sap.m">
    <forms:SimpleForm editable="false" layout="ColumnLayout">
        <Label text="Price Group" visible="{=${fieldMappingModel>/344/visibility} === 'Y' ? true : false}"
 required="{=${fieldMappingModel>/344/mandatory} === 'Y' ? true : false}"/>

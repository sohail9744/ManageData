<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:forms="sap.ui.layout.form" xmlns="sap.m" xmlns:core="sap.ui.core">
	<forms:SimpleForm editable="false" layout="ColumnLayout">
        <core:Title text="Credit Performance"/>
		<Label text="Debtors Balance of the customer as at last month end" visible="{=${fieldMappingModel>/161/visibility} === 'Y' ? true : false}"
 required="{=${fieldMappingModel>/161/mandatory} === 'Y' ? true : false}"/>
		<Input value="{Customers>/zdebtors_bal_of_cust_last}" visible="{=${fieldMappingModel>/161/visibility} === 'Y' ? true : false}"/>
		<Label text="Overdue if any" visible="{=${fieldMappingModel>/309/visibility} === 'Y' ? true : false}"
 required="{=${fieldMappingModel>/309/mandatory} === 'Y' ? true : false}"/>
		<Input value="{Customers>/zoverdue_if_any}" visible="{=${fieldMappingModel>/309/visibility} === 'Y' ? true : false}"/>
		<Label text="Provision created if any" visible="{=${fieldMappingModel>/314/visibility} === 'Y' ? true : false}"
 required="{=${fieldMappingModel>/314/mandatory} === 'Y' ? true : false}"/>
		<Input value="{Customers>/zprovision_created_if_any}" visible="{=${fieldMappingModel>/314/visibility} === 'Y' ? true : false}"/>
		 <core:Title text=""/>
		<Label text="Number of times customer defaulted payment terms" visible="{=${fieldMappingModel>/299/visibility} === 'Y' ? true : false}"
 required="{=${fieldMappingModel>/299/mandatory} === 'Y' ? true : false}"/>
		<Input value="{Customers>/zno_of_times_cust_def_payterm}" visible="{=${fieldMappingModel>/299/visibility} === 'Y' ? true : false}"/>
		<Label text="If CRI, then CRI withdrawn / Reduced in last 12 months" visible="{=${fieldMappingModel>/204/visibility} === 'Y' ? true : false}"
 required="{=${fieldMappingModel>/204/mandatory} === 'Y' ? true : false}"/>
		<Input value="{Customers>/zif_cri_reduced_in_last_12_mnt}" visible="{=${fieldMappingModel>/204/visibility} === 'Y' ? true : false}"/>
		<Label text="Customer Assessment and other factors" visible="{=${fieldMappingModel>/145/visibility} === 'Y' ? true : false}"
 required="{=${fieldMappingModel>/145/mandatory} === 'Y' ? true : false}"/>
		<Input value="{Customers>/zcust_assessment_other_factors}" visible="{=${fieldMappingModel>/145/visibility} === 'Y' ? true : false}"/>
        <core:Title text="Questions"/>
        <Label text="Question 1?"/>
        <RadioButtonGroup>
			<RadioButton text="Yes" />
			<RadioButton text="No"/>
		</RadioButtonGroup>
        <Label text="Question 2?"/>
        <RadioButtonGroup>
			<RadioButton text="Yes" />
			<RadioButton text="No"/>
		</RadioButtonGroup>
		<core:Title text="Note"/>
		<Label text="Annual Appraisal Request Only"/>
		<Input value="{Customers>/zdebtors_bal_of_cust_last}"/>
	</forms:SimpleForm>
</mvc:View>
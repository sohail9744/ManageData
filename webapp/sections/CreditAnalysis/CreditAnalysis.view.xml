        <Input value="{Customers>/znetprofit}" visible="{=${fieldMappingModel>/293/visibility} === 'Y' ? true : false}"/>
        <Label text="Country" visible="{=${fieldMappingModel>/111/visibility} === 'Y' ? true : false}"

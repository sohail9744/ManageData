    <forms:SimpleForm editable="false" layout="ColumnLayout">
        <core:Title text="Questions" />
        <Label text="Are the details for Credit Analysis available (For unsecured credit it is mandatory)" visible="{=${fieldMappingModel>/31/visibility} === 'Y' ? true : false}" required="{=${fieldMappingModel>/31/mandatory} === 'Y' ? true : false}" />
        <RadioButtonGroup visible="{=${fieldMappingModel>/31/visibility} === 'Y' ? true : false}">
            <RadioButton text="Yes" />
            <RadioButton text="No" />
        </RadioButtonGroup>
        <core:Title text="Financials Details to be attached (any one)" />
        <Label text="Financials Statements" visible="{=${fieldMappingModel>/190/visibility} === 'Y' ? true : false}" required="{=${fieldMappingModel>/190/mandatory} === 'Y' ? true : false}" />
        <u:FileUploader visible="{=${fieldMappingModel>/190/visibility} === 'Y' ? true : false}" name="myFileUpload" uploadUrl="upload/" tooltip="Upload your file to the local server" uploadComplete="handleUploadComplete" />
        <Label text="D and B Report" visible="{=${fieldMappingModel>/157/visibility} === 'Y' ? true : false}" required="{=${fieldMappingModel>/157/mandatory} === 'Y' ? true : false}" />
        <u:FileUploader visible="{=${fieldMappingModel>/157/visibility} === 'Y' ? true : false}" name="myFileUpload" uploadUrl="upload/" tooltip="Upload your file to the local server" uploadComplete="handleUploadComplete" />
        <Label text="Bank Statement / References" visible="{=${fieldMappingModel>/60/visibility} === 'Y' ? true : false}" required="{=${fieldMappingModel>/60/mandatory} === 'Y' ? true : false}" />
        <u:FileUploader visible="{=${fieldMappingModel>/60/visibility} === 'Y' ? true : false}" name="myFileUpload" uploadUrl="upload/" tooltip="Upload your file to the local server" uploadComplete="handleUploadComplete" />
        <Label text="Last 12 months statement of accounts (IFFCO) / Other documents" visible="{=${fieldMappingModel>/253/visibility} === 'Y' ? true : false}" required="{=${fieldMappingModel>/253/mandatory} === 'Y' ? true : false}" />
        <u:FileUploader visible="{=${fieldMappingModel>/253/visibility} === 'Y' ? true : false}" name="myFileUpload" uploadUrl="upload/" tooltip="Upload your file to the local server" uploadComplete="handleUploadComplete" />
        <core:Title text="Others" />
        <Label text="Year of Financial" visible="{=${fieldMappingModel>/482/visibility} === 'Y' ? true : false}"
 required="{=${fieldMappingModel>/482/mandatory} === 'Y' ? true : false}"/>
        <Input value="{Customers>/zyear_of_financial}" visible="{=${fieldMappingModel>/482/visibility} === 'Y' ? true : false}"/>
        <Label text="Revenue/Net Profit Currency" visible="{=${fieldMappingModel>/378/visibility} === 'Y' ? true : false}"

<mvc:View
    controllerName="Iffco.clap.sections.ERPCustomers.APTController"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:forms="sap.ui.layout.form"
    xmlns="sap.m"
>
    <forms:SimpleForm
        editable="false"
        layout="ColumnLayout"
    >
        <Label
            text="Company Code"
            visible="{=${fieldMappingModels>/CompanyCodeVisible} === true ? true : false}"
            required="{=${fieldMappingModels>/CompanyCodeMandatory} === true ? true : false}"
        />
        <!--    <Input visible="{=${fieldMappingModels>/CompanyCodeVisible} === true ? true : false}" enabled="{=${Customers>/zrequest_no} ? false : true}" maxLength="4" value="{Customers>/zcompany_code}"/> -->
        <MultiInput
            showClearIcon="true"
            enabled="{=${Customers>/zrequest_status} === 'In Progress' || ${Customers>/zrequest_status} === 'In Draft' ? false : true}"
            valueHelpRequest="handleValueHelpForCompCode"
            value="{Customers>/zcompany_code}"
            valueHelpOnly="true"
            visible="{=${fieldMappingModels>/CompanyCodeVisible} === true ? true : false}"
        />
        <Label
            text="Reconcilation Account"
            visible="{=${fieldMappingModels>/ReconciliationAccountVisible} === true ? true : false}"
            required="{=${fieldMappingModels>/ReconciliationAccountMandatory} === true ? true : false}"
        />
        <MultiInput
            enabled="{appView>/status}"
            showClearIcon="true"
            valueHelpRequest="handleReconcilationNumber"
            valueHelpOnly="true"
            value="{Customers>/zreconciliation_account}"
            maxLength="10"
            visible="{=${fieldMappingModels>/ReconciliationAccountVisible} === true ? true : false}"
        />
        <Label
            text="Head office"
            visible="{=${fieldMappingModels>/HeadOfficeVisible} === true ? true : false}"
            required="{=${fieldMappingModels>/HeadOfficeMandatory} === true ? true : false}"
        />
        <MultiInput
            enabled="{appView>/status}"
            showClearIcon="true"
            valueHelpRequest="handleValueHelpForHeadOffice"
            valueHelpOnly="true"
            value="{Customers>/zhead_office}"
            maxLength="10"
            visible="{=${fieldMappingModels>/HeadOfficeVisible} === true ? true : false}"
        />
        <!-- <MultiInput showClearIcon="true" enabled="{appView>/status}" valueHelpRequest="handleValueHelpForHeadOffice" value="{Customers>/zhead_office}"
		valueHelpOnly="true" visible="{=${fieldMappingModels>/HeadOfficeVisible} === true ? true : false}"/> -->
        <Label
            text="Authorization Group"
            visible="{=${fieldMappingModels>/AuthorizationGroupVisible} === true ? true : false}"
            required="{=${fieldMappingModels>/AuthorizationGroupMandatory} === true ? true : false}"
        />
        <!-- <Input enabled="{appView>/status}" value="{Customers>/zauthorization_group}" maxLength="4" visible="{=${fieldMappingModels>/AuthorizationGroupVisible} === true ? true : false}"/> -->
        <MultiInput
            showClearIcon="true"
            enabled="{appView>/status}"
            valueHelpRequest="handleValueHelpForAuthorization"
            value="{Customers>/zauthorization_group}"
            valueHelpOnly="true"
            visible="{=${fieldMappingModels>/AuthorizationGroupVisible} === true ? true : false}"
        />
        <Label
            text="Value Adjustment"
            visible="{=${fieldMappingModels>/ValueAdjustmentVisible} === true ? true : false}"
            required="{=${fieldMappingModels>/ValueAdjustmentMandatory} === true ? true : false}"
        />
        <!-- <Input enabled="{appView>/status}" value="{Customers>/zvalue_adjustment}" maxLength="2" visible="{=${fieldMappingModels>/ValueAdjustmentVisible} === true ? true : false}"/> -->
        <MultiInput
            showClearIcon="true"
            enabled="{appView>/status}"
            valueHelpRequest="handleValueHelpForValueAdjustment"
            value="{Customers>/zvalue_adjustment}"
            valueHelpOnly="true"
            visible="{=${fieldMappingModels>/ValueAdjustmentVisible} === true ? true : false}"
        />
        <Label
            text="Sort Key"
            visible="{=${fieldMappingModels>/SortKeyVisible} === true ? true : false}"
            required="{=${fieldMappingModels>/SortKeyMandatory} === true ? true : false}"
        />
        <MultiInput
            showClearIcon="true"
            enabled="{appView>/status}"
            valueHelpRequest="handleValueHelpForSortKey"
            value="{Customers>/zsort_key}"
            valueHelpOnly="true"
            visible="{=${fieldMappingModels>/SortKeyVisible} === true ? true : false}"
        />
        <!-- <Input enabled="{appView>/status}" value="{Customers>/zsort_key}" maxLength="3" visible="{=${fieldMappingModels>/SortKeyVisible} === true ? true : false}"/> -->
        <Label
            text="Planning Group"
            visible="{=${fieldMappingModels>/PlanningGroupVisible} === true ? true : false}"
            required="{=${fieldMappingModels>/PlanningGroupMandatory} === true ? true : false}"
        />
        <!-- <Input enabled="{appView>/status}" value="{Customers>/zplanning_group}" maxLength="10" visible="{=${fieldMappingModels>/PlanningGroupVisible} === true ? true : false}"/> -->
        <MultiInput
            showClearIcon="true"
            enabled="{appView>/status}"
            valueHelpRequest="handleValueHelpForPlanningGrp"
            value="{Customers>/zplanning_group}"
            valueHelpOnly="true"
            visible="{=${fieldMappingModels>/PlanningGroupVisible} === true ? true : false}"
        />
        <Label
            text="Release Group"
            visible="{=${fieldMappingModels>/ReleaseGroupVisible} === true ? true : false}"
            required="{=${fieldMappingModels>/ReleaseGroupMandatory} === true ? true : false}"
        />
        <!-- <Input enabled="{appView>/status}" value="{Customers>/zrelease_group}" maxLength="4" visible="{=${fieldMappingModels>/ReleaseGroupVisible} === true ? true : false}"/> -->
        <MultiInput
            showClearIcon="true"
            enabled="{appView>/status}"
            valueHelpRequest="handleValueHelpForReleaseGrp"
            value="{Customers>/zrelease_group}"
            valueHelpOnly="true"
            visible="{=${fieldMappingModels>/ReleaseGroupVisible} === true ? true : false}"
        />
    </forms:SimpleForm>
</mvc:View>

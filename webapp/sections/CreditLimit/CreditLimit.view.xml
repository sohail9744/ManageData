<mvc:View controllerName="Iffco.clap.sections.CreditLimit.CreditLimitController" xmlns:mvc="sap.ui.core.mvc" xmlns:forms="sap.ui.layout.form" xmlns="sap.m" >
	<forms:SimpleForm editable="false" id="cl" layout="ColumnLayout">
		
		<Label text="Credit Limit Type" visible="{=${fieldMappingModels>/CreditLimitTypeVisible} === true ? true : false}" required="{=${fieldMappingModels>/CreditLimitTypeMandatory} === true ? true : false}"/>
		<RadioButtonGroup select="handleCreditLimitTypeSelect" selectedIndex="0">
			<RadioButton enabled="{=${Customers>/zrequest_status} !== 'In Progress' ? true : false}" selected="{= ${Customers>/zcredit_limit_type} === 'Secured Credit' || ${appView>/selectedType} === 0 ? true : false}" text="Secured Credit Limit" />
			<RadioButton enabled="{=${Customers>/zrequest_status} !== 'In Progress' ? true : false}" selected="{= ${Customers>/zcredit_limit_type} === 'UnSecured Credit' || ${appView>/selectedType} === 1 ? true : false}" text="UnSecured Credit Limit" />
		    <RadioButton enabled="{=${Customers>/zrequest_status} !== 'In Progress' ? true : false}" selected="{= ${Customers>/zcredit_limit_type} === 'Both' || ${appView>/selectedType} === 2 ? true : false}" text="Both" />
		</RadioButtonGroup>
	</forms:SimpleForm>	
</mvc:View>
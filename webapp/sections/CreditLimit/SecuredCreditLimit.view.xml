        <Input enabled="{=${Customers>/zrequest_status} !== 'In Progress' ? true : false}" value="{Customers>/zavalization_draft_bank_name}" maxLength="20" visible="{=${fieldMappingModels>/AvalizationDraftBankNameVisible} === true ? true : false}" />

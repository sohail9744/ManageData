<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:forms="sap.ui.layout.form" xmlns="sap.m" xmlns:core="sap.ui.core">
    <forms:SimpleForm editable="false" layout="ColumnLayout">
        <core:Title text="Irrevocable Bank Guarantee" />
        <Label text="Bank Name" visible="{=${fieldMappingModel>/231/visibility} === 'Y' ? true : false}" required="{=${fieldMappingModel>/231/mandatory} === 'Y' ? true : false}" />
        <Input value="{Customers>/zirr_bank_guarantee_name}" visible="{=${fieldMappingModel>/231/visibility} === 'Y' ? true : false}" />
        <Label text="Amount (AED)" visible="{=${fieldMappingModel>/230/visibility} === 'Y' ? true : false}" required="{=${fieldMappingModel>/230/mandatory} === 'Y' ? true : false}" />
        <Input value="{Customers>/zirr_bank_guarantee_amt}" visible="{=${fieldMappingModel>/230/visibility} === 'Y' ? true : false}" />
        
        <core:Title text="Irrevocable LC from Approved Bank" />
        <Label text="LC Issuance Bank Country" visible="{=${fieldMappingModel>/244/visibility} === 'Y' ? true : false}" required="{=${fieldMappingModel>/244/mandatory} === 'Y' ? true : false}" />
        <Input value="{Customers>/zlc_issuance_bankcountry}" visible="{=${fieldMappingModel>/244/visibility} === 'Y' ? true : false}" />
        <Label text="LC Issuance Bank" visible="{=${fieldMappingModel>/243/visibility} === 'Y' ? true : false}" required="{=${fieldMappingModel>/243/mandatory} === 'Y' ? true : false}" />
        <Input value="{Customers>/zlc_issuance_bank}" visible="{=${fieldMappingModel>/243/visibility} === 'Y' ? true : false}" />
        
        <core:Title text="Credit Risk Insurance (CRI) [With attachments]" />
        <Label text="Insurer" visible="{=${fieldMappingModel>/136/visibility} === 'Y' ? true : false}" required="{=${fieldMappingModel>/136/mandatory} === 'Y' ? true : false}" />
        <Input value="{Customers>/zcri_insurer}" visible="{=${fieldMappingModel>/136/visibility} === 'Y' ? true : false}" />
        <Label text="Amount (AED)" visible="{=${fieldMappingModel>/137/visibility} === 'Y' ? true : false}" required="{=${fieldMappingModel>/137/mandatory} === 'Y' ? true : false}" />
        <Input value="{Customers>/zcri_insurer_amount}" visible="{=${fieldMappingModel>/137/visibility} === 'Y' ? true : false}" />
        <Label text="CRI Buyer ID" visible="{=${fieldMappingModel>/127/visibility} === 'Y' ? true : false}" required="{=${fieldMappingModel>/127/mandatory} === 'Y' ? true : false}" />
        <Input value="{Customers>/zcri_buyerid}" visible="{=${fieldMappingModel>/127/visibility} === 'Y' ? true : false}" />
        <Label text="Approval Mail Attachment" visible="{=${fieldMappingModel>/126/visibility} === 'Y' ? true : false}" required="{=${fieldMappingModel>/126/mandatory} === 'Y' ? true : false}" />
        <Input value="{Customers>/zcri_approval_mail_attach}" visible="{=${fieldMappingModel>/126/visibility} === 'Y' ? true : false}" />
       
        <core:Title text="Corporate Guarantee from Parent co. of Class A customer" />
        <Label text="Name of Company" visible="{=${fieldMappingModel>/290/visibility} === 'Y' ? true : false}" required="{=${fieldMappingModel>/290/mandatory} === 'Y' ? true : false}" />
        <Input value="{Customers>/zclassa_name_of_the_company}" visible="{=${fieldMappingModel>/290/visibility} === 'Y' ? true : false}" />
        <Label text="Amount (AED)" visible="{=${fieldMappingModel>/26/visibility} === 'Y' ? true : false}" required="{=${fieldMappingModel>/26/mandatory} === 'Y' ? true : false}" />
        <Input value="{Customers>/zclassa_customer_amount}" visible="{=${fieldMappingModel>/26/visibility} === 'Y' ? true : false}" />
        
        <core:Title text="Cash Deposit/Advance" />
        <Label text="Amount (AED)" visible="{=${fieldMappingModel>/26/visibility} === 'Y' ? true : false}" required="{=${fieldMappingModel>/26/mandatory} === 'Y' ? true : false}" />
        <Input value="{Customers>/zcash_deposit_adv_amount}" visible="{=${fieldMappingModel>/26/visibility} === 'Y' ? true : false}" />
        <core:Title text="Avalization Draft (accepted by Customer and duly accepted by Customer Bank)" />
        <Label text="Bank Name" visible="{=${fieldMappingModel>/48/visibility} === 'Y' ? true : false}" required="{=${fieldMappingModel>/48/mandatory} === 'Y' ? true : false}" />
        <Input value="{Customers>/zavalization_draft_bank_name}" visible="{=${fieldMappingModel>/48/visibility} === 'Y' ? true : false}" />
        <Label text="Amount (AED)" visible="{=${fieldMappingModel>/47/visibility} === 'Y' ? true : false}" required="{=${fieldMappingModel>/47/mandatory} === 'Y' ? true : false}" />
        <Input value="{Customers>/zavalization_draft_amount}" visible="{=${fieldMappingModel>/47/visibility} === 'Y' ? true : false}" />
    </forms:SimpleForm>
</mvc:View>

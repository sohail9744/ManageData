<mvc:View
    controllerName="Iffco.clap.sections.CustomerBasicDetails.InitiationDetailsController"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:forms="sap.ui.layout.form"
    xmlns="sap.m"
>
    <forms:SimpleForm
        enabled="false"
        layout="ColumnLayout"
    >
        <Label
            text="Request ID"
            visible="{=${Customers>/zrequest_no} ? true : false}"
        />
        <Input
            value="{Customers>/zrequest_no}"
            enabled="false"
            visible="{=${Customers>/zrequest_no} ? true : false}"
        />
        <Label text="Request Type" />
        <Input
            value="{= ${Customers>/zrequest_type} !== '' ? 'Create Customer' : '{Customers>/zrequest_type}'}"
            enabled="false"
            maxLength="20"
        />
        <Label text="Description" />

        <RadioButtonGroup
            selectedIndex="0"
            enabled="{appView>/clapFields}"
            select="onDescriptionSelect"
        >
            <RadioButton
                id="0"
                selected="{= ${Customers>/zdescription} === 'Credit' || ${appView>/customerType} === 0 ? true : false}"
                text="Credit"
            />
            <RadioButton
                id="1"
                text="Cash"
                selected="{= ${Customers>/zdescription} === 'Cash' || ${appView>/customerType} === 1 ? true : false}"
            />
        </RadioButtonGroup>

        <Label
            text="Business Unit"
            visible="{=${fieldMappingModels>/BusinessUnitVisible} === true ? true : false}"
            required="{=${fieldMappingModels>/BusinessUnitMandatory} === true ? true : false}"
        />
        <MultiInput
            showClearIcon="true"
            value="{Customers>/zbusiness_unit_name}"
            valueHelpRequest="handleValueHelpForBusinessUnit"
            valueHelpOnly="true"
            enabled="{appView>/clapFields}"
            visible="{=${fieldMappingModels>/BusinessUnitVisible} === true ? true : false}"
        />

        <Label
            text="Vertical"
            visible="{=${fieldMappingModels>/VerticalVisible} === true ? true : false}"
            required="{=${fieldMappingModels>/VerticalMandatory} === true ? true : false}"
        />
        <MultiInput
            showClearIcon="true"
            value="{Customers>/zvertical}"
            valueHelpRequest="handleValueHelpForVertical"
            valueHelpOnly="true"
            enabled="{appView>/clapFields}"
            visible="{=${fieldMappingModels>/VerticalVisible} === true ? true : false}"
        />

        <Label
            text="Priority"
            visible="{=${fieldMappingModels>/PriorityVisible} === true ? true : false}"
            required="{=${fieldMappingModels>/PriorityMandatory} === true ? true : false}"
        />
        <Input
            enabled="{=${Customers>/zrequest_status} !== 'In Progress' ? true : false}"
            value="{Customers>/zpriority}"
            maxLength="10"
            visible="{=${fieldMappingModels>/PriorityVisible} === true ? true : false}"
        />
        <Label
            text="Due Date"
            visible="{=${fieldMappingModels>/DueDateVisible} === true ? true : false}"
            required="{=${fieldMappingModels>/DueDateMandatory} === true ? true : false}"
        />
        <DatePicker
            enabled="{=${Customers>/zrequest_status} !== 'In Progress' ? true : false}"
            value="{Customers>/zduedate}"
            valueFormat="MM.dd.yyyy"
            visible="{=${fieldMappingModels>/DueDateVisible} === true ? true : false}"
        />
        <Label
            text="Reason"
            visible="{=${fieldMappingModels>/ReasonVisible} === true ? true : false}"
            required="{=${fieldMappingModels>/ReasonMandatory} === true ? true : false}"
        />
        <Input
            enabled="{=${Customers>/zrequest_status} !== 'In Progress' ? true : false}"
            value="{Customers>/zreason}"
            visible="{=${fieldMappingModels>/ReasonVisible} === true ? true : false}"
        />
        <Label
            text="Status"
            visible="{=${fieldMappingModels>/StatusVisible} === true ? true : false}"
            required="{=${fieldMappingModels>/StatusMandatory} === true ? true : false}"
        />
        <Input
            value="{Customers>/zstatus}"
            maxLength="10"
            enabled="false"
            visible="{=${fieldMappingModels>/StatusVisible} === true ? true : false}"
        />

        <Label
            text="Created On/By"
            visible="{=${fieldMappingModels>/CreatedOnVisible} === true ? true : false}"
            required="{=${fieldMappingModels>/CreatedOnMandatory} === true ? true : false}"
        />
        <DatePicker
            enabled="false"
            value="{Customers>/zcreated_date}"
            visible="{=${fieldMappingModels>/CreatedOnVisible} === true ? true : false}"
            valueFormat="MM.dd.yyyy"
            displayFormat="long"
        />
        <Label
            text="Updated On/By"
            visible="{=${fieldMappingModels>/ChangedOnVisible} === true ? true : false}"
            required="{=${fieldMappingModels>/ChangedOnMandatory} === true ? true : false}"
        />
        <DatePicker
            enabled="false"
            value="{Customers>/zupdated_date}"
            visible="{=${fieldMappingModels>/ChangedOnVisible} === true ? true : false}"
            valueFormat="MM.dd.yyyy"
            displayFormat="long"
        />
        <Label
            text="Finished On/By"
            visible="{=${fieldMappingModels>/FinalizedOnVisible} === true ? true : false}"
            required="{=${fieldMappingModels>/FinalizedOnMandatory} === true ? false : true}"
        />
        <DatePicker
            enabled="false"
            value="{Customers>/zfinalizedon}"
            visible="{=${fieldMappingModels>/FinalizedOnVisible} === true ? true : false}"
        />
    </forms:SimpleForm>
</mvc:View>

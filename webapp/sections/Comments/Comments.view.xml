<mvc:View controllerName="Iffco.clap.sections.Comments.CommentsController" xmlns:mvc="sap.ui.core.mvc"  xmlns:forms="sap.ui.layout.form" xmlns="sap.m">
    <FeedInput enabled="{appView>/status}" post="onPost" icon="sap-icon://customer" class="sapUiSmallMarginTopBottom" />
    <List id="list" showSeparators="Inner" items="{commentsModel>/}">
        <FeedListItem sender="{commentsModel>zcreated_by}" icon="sap-icon://customer" senderPress="onSenderPress" iconPress="onIconPress" iconDensityAware="false" info="{commentsModel>zcomment}" timestamp="{commentsModel>createdat}" text="{commentsModel>zcomment}" convertLinksToAnchorTags="All" />
    </List>
</mvc:View>

<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:input="sap.m.MultiInput" xmlns:l="sap.ui.layout"
	xmlns:html="http://www/w3.org/1999/xhtml" controllerName="VDM.EPL.CreateVendorCreation.controller.App" xmlns:f="sap.ui.layout.form">
<Dialog title="Sales data" contentWidth="50%" class="sapUiSizeCompact" contentHeight="12rem" visible="true">
		<endButton>
			<Button text="Cancel" press="handleCancelOutputTax"/>
		</endButton>
		<beginButton>
			<Button text="Add" type="Emphasized" press="handleAddSalesGrid"/>
		</beginButton>
		<f:SimpleForm editable="true" layout="ResponsiveGridLayout" title="" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12"
			adjustLabelSpan="true" emptySpanXL="0" emptySpanL="0" emptySpanM="1" emptySpanS="0">
			<f:content>
				<Label text="Sales Organization" visible="{=${fieldMappingModel>/391/visibility} === 'Y' ? true : false}"
 required="{=${fieldMappingModel>/391/mandatory} === 'Y' ? true : false}"/>
 <MultiInput value="{Customers>/zsales_orgnization}" valueHelpRequest="handleValueHelpForSalesOrg"
	valueHelpOnly="true" visible="{=${fieldMappingModel>/391/visibility} === 'Y' ? true : false}"/>
		<!-- <Input value="{Customers>/zsales_orgnization}" visible="{=${fieldMappingModel>/391/visibility} === 'Y' ? true : false}"/> -->
		<Label text = "Distribution Channel" visible="{=${fieldMappingModel>/167/visibility} === 'Y' ? true : false}"
 required="{=${fieldMappingModel>/167/mandatory} === 'Y' ? true : false}"/>
		<MultiInput value="{Customers>/zdistribution_channel}" valueHelpRequest="handleValueHelpForDistChannel"
	valueHelpOnly="true" visible="{=${fieldMappingModel>/167/visibility} === 'Y' ? true : false}"/>
		<!-- <Input value="{Customers>/zdistribution_channel}" visible="{=${fieldMappingModel>/167/visibility} === 'Y' ? true : false}"/> -->
		 
		<Label text="Division" visible="{=${fieldMappingModel>/168/visibility} === 'Y' ? true : false}"
 required="{=${fieldMappingModel>/168/mandatory} === 'Y' ? true : false}"/>
 <MultiInput value="{Customers>/zdivision}" valueHelpRequest="handleValueHelpForDivision"
	valueHelpOnly="true" visible="{=${fieldMappingModel>/168/visibility} === 'Y' ? true : false}"/>
		<!-- <Input value="{Customers>/zdivision}"  visible="{=${fieldMappingModel>/168/visibility} === 'Y' ? true : false}"/> -->
			</f:content>
		</f:SimpleForm>
	</Dialog>
</core:FragmentDefinition>